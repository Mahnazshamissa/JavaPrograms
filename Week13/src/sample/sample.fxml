<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          style="-fx-font-family: Papyrus;-fx-alignment: center;-fx-hgap:10;-fx-vgap: 10 ">
    <Text text="My love Shamissa."
          GridPane.columnSpan="2"
          GridPane.rowIndex="0"
          GridPane.halignment="CENTER"
          style="-fx-font-size: 20px;-fx-fill: crimson"/>

    <Label text="Feeling: "
           GridPane.rowIndex="1"
           GridPane.columnIndex="0"
           style="-fx-font-size: 20px;-fx-background-color: bisque; -fx-fill: deeppink"/>

    <TextField fx:id="feeling"
               GridPane.rowIndex="1"
               GridPane.columnIndex="1"/>

    <Button text="Say Mahnaz feeling"
            onAction="#sayMahnazFeeling"
            GridPane.rowIndex="2"
            GridPane.columnIndex="1"
            GridPane.halignment="RIGHT"
    style="-fx-border-color: crimson"/>

</GridPane>